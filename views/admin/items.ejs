<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin - Manage Items</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <%- include('../bloks/nav') -%>
  <div class="container mt-5">
    <h1>Manage Items</h1>
    <a href="/logout" class="btn btn-secondary mb-3">Logout</a>
    <a href="/admin/items/new" class="btn btn-primary mb-3">Add New Item</a>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name (EN)</th>
          <th>Created At</th>
          <th>Updated At</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% items.forEach(item => { %>
          <tr>
            <td><%= item._id %></td>
            <td><%= item.name_en %></td>
            <td><%= item.createdAt.toLocaleString() %></td>
            <td><%= item.updatedAt.toLocaleString() %></td>
            <td>
              <a href="/admin/items/<%= item._id %>/edit" class="btn btn-warning btn-sm">Edit</a>
              <form action="/admin/items/<%= item._id %>?_method=DELETE" method="POST" style="display:inline;">
                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
              </form>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>