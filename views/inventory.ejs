<%- include('bloks/header') -%>
  <link rel="stylesheet" href="css/inventory.css">
</head>
<body>
  <%- include('bloks/nav') -%>
  <h1>Check Your Steam Inventory</h1>

  <!-- Форма для ввода Steam ID и выбора игры -->
  <form action="/inventory" method="POST">
    <label for="steamId">Enter your Steam ID:</label>
    <input type="text" id="steamId" name="steamId" required>

    <label for="game">Choose a game:</label>
    <select id="game" name="game" required>
      <option value="730">CS:GO</option>
      <option value="570">Dota 2</option>
      <option value="440">Team Fortress 2</option>
    </select>

    <button type="submit">Get Inventory</button>
  </form>

  <!-- Вывод инвентаря -->
  <div id="inventory">
    <% if (items && items.length > 0) { %>
      <h2>Your Inventory:</h2>
      <ul>
        <% items.forEach(item => { %>
          <li>
            <img src="<%= item.imageUrl %>" alt="<%= item.name %>" width="50">
            <strong><%= item.name %></strong> (<%= item.type %>)
          </li>
        <% }) %>
      </ul>
    <% } else if (error) { %>
      <p style="color: red;"><%= error %></p>
    <% } else { %>
      <p>No inventory found yet. Enter your Steam ID to see your items.</p>
    <% } %>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
